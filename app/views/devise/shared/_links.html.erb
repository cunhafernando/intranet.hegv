
<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class:"w-100 py-2 mb-2 btn btn-outline-primary rounded-3" %><br />
<% end %>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class:"w-100 py-2 mb-2 btn btn-outline-primary rounded-3" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class:"w-100 py-2 mb-2 btn btn-outline-primary rounded-3" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Não recebeu as instruções de confirmação?", new_confirmation_path(resource_name), class:"w-100 py-2 mb-2 btn btn-outline-primary rounded-3" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Não recebeu instruções de desbloqueio?", new_unlock_path(resource_name), class:"w-100 py-2 mb-2 btn btn-outline-primary rounded-3" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <button class="w-100 py-2 mb-2 btn btn-outline-primary rounded-3" type="submit">
      <%= link_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
    </button>
  <% end %>
<% end %>

