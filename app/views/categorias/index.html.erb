<main class="container">
    <div class="row mb-2 mt-4">
    <% if notice.present? %>
        <div class="alert alert-success" role="alert">
            <%= notice %>
        </div>
    <% end %>

    <% if alert.present? %>
        <div class="alert alert-danger" role="alert">
            <%= alert %>
        </div>
    <% end %>
  </div>
    <div class="row g-5">
    <div class="col-md-12">
      <h3 class="pb-4 mb-4 fst-italic border-bottom">
        Categorias
      </h3>
      <p>
        <%= link_to 'Nova Categoria', new_categoria_path, class: "btn btn-outline-primary  rounded-pill" %>
      </p>

        <div class="col-md-12">
              <table class="table table-striped table-hover table-bordered">
                <thead>
                  <tr>
                    <th>Categoria</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% @categorias.each do |categoria| %>
                    <tr>
                      <td><%= categoria.name %></td>
                      <td>
                        <%= link_to "Mostrar", categoria, class:"btn btn-outline-success rounded-pill mb-3" %>
                        <%= link_to "Editar", edit_categoria_path(categoria), class:"btn btn-outline-secondary rounded-pill mb-3" %>
                        <%= link_to "Apagar", categoria, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class:"btn btn-outline-danger rounded-pill mb-3" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
        </div>
    </div>
  </div>
</main>