<%= form_with(model: noticia) do |form| %>
  <% if noticia.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h3><%= pluralize(noticia.errors.count, "erro") %> proibiu que esta noticia fosse salva:</h3>

      <ul>
        <% noticia.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <div class="col-12 mb-3">
      <%= form.label :titulo, style: "display: block", class: "form-label" %>
      <%= form.text_field :titulo, class: "form-control" %>
    </div>

    <div class="col-12 mb-3">
      <%= form.label :content, style: "display: block", class: "form-label" %>
      <%= form.rich_text_area :content, class: "form-control" %>
    </div>

    <div class="col-12 mb-3">
      <%= form.label :arquivo, style: "display: block", class: "form-label" %>
      <%= form.file_field :arquivo, class: "form-control" %>
    </div>

    <div class="col-12">
      <%= form.submit class: 'btn btn-outline-success rounded-pill' %>
    </div>
  </div>
<% end %>
