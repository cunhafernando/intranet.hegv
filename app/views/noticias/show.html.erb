      <%= render @noticia %>
      <% if current_user && current_user.admin? %>
        <div class="mb-4">
          <%= link_to "Editar", edit_noticia_path(@noticia), class:"btn btn-outline-primary mb-3" if policy(@noticia).update? %>
          <%= link_to "Voltar", noticias_path, class:"btn btn-outline-success mb-3" %>
        </div>
        <div class="mb-4">
          <%= button_to "Apagar", @noticia, method: :delete, class:"btn btn-outline-danger mb-3" if policy(@noticia).destroy? %>
        </div>
      <% end %>

