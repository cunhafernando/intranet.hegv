 
  <div class="row g-5 mb-5">
    <div class="col-md-12">
      <h3 class="pb-4 mb-4 fst-italic">
        
      </h3>

      <%= render @noticia %>
      <% if current_user && current_user.admin? %>
        <div class="mb-4">
          <%= link_to "Editar", edit_noticia_path(@noticia), class:"btn btn-outline-primary mb-3" if policy(@noticia).update? %>
          <%= link_to "Voltar", noticias_path, class:"btn btn-outline-success mb-3" %>
        </div>
        <div class="mb-4">
          <%= button_to "Apagar", @noticia, method: :delete, class:"btn btn-outline-danger mb-3" if policy(@noticia).destroy? %>
        </div>
      <% end %>


      <h2 class="mt-3">Comentários</h2>
      <%= render @noticia.comentarios %>


      <h2>Adicione um comentário:</h2>
      <% if policy(:comentario).create? %>
        <%= render 'comentarios/form' %>
      <% else %>
        Por favor, faça login para criar um comentário.
      <% end %>


