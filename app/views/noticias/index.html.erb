
  
  <%= render_if @principais[0].present?, '/noticias/layoutsBlog/principalBlog', noticia: @principais[0] %>
  <div class="row mb-2">
    <%= render_if @principais[1].present?, '/noticias/layoutsBlog/principaisBlogs', noticia: @principais[1] %>
    <%= render_if @principais[2].present?, '/noticias/layoutsBlog/principaisBlogs', noticia: @principais[2] %>
  </div>

  <div class="row g-5">
    <div class="col-md-8">
      <h3 class="pb-4 mb-4 fst-italic border-bottom">
        Notícias
      </h3>
      <p>
        <% if current_user && current_user.admin? %>
          <%= link_to 'Nova Notícia', new_noticia_path, class: "btn btn-outline-primary  rounded-pill" %>
        <% end %>
      </p>

      <% @noticias.each do |noticia| %>
        <div class="col-md-12">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
              <div class="col p-4 d-flex flex-column position-static">
                  <!--<strong class="d-inline-block mb-2 text-success">Design</strong>-->
                  <h3 class="mb-0"><%= noticia.titulo %></h3>
                  <div class="mb-1 text-muted"><%= month_day_comma_year(noticia.created_at) %></div>
                  <p class="card-text mb-auto"><%= noticia.content.to_plain_text.truncate(150) %></p>
                  <p class="mb-1">
                    <%= link_to "Continue lendo ...", noticia, class:"btn btn-link" %>
                  </p>
                  <div>
                    <%= link_to "Editar", edit_noticia_path(noticia), class:"btn btn-outline-secondary rounded-pill mb-3" %>
                    <%= link_to "Apagar", @noticia, method: :delete, data: { confirm: 'Você tem certeza?' }, class:"btn btn-outline-danger rounded-pill mb-3" %>
                  </div>
              </div>
              <div class="col-auto d-none d-lg-block">
                  <%= image_tag noticia.arquivo_url, :class => "bd-placeholder-img", :width => "250", :height => "280" if noticia.arquivo.present?  %>
              </div>
            </div>
        </div>
        
      <% end %>

      <nav class="blog-pagination" aria-label="Pagination">
        <%= link_to_next_page @noticias, 'Anterior', class: "btn btn-outline-primary rounded-pill" %>
        <%= link_to_previous_page @noticias, 'Próximo', class: "btn btn-outline-secondary rounded-pill" %>
      </nav>

    </div>
    <%= render :partial => '/noticias/layoutsBlog/sideBlog' %>
  </div>

