<%= form_with(model: jornal) do |form| %>
  <% if jornal.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(jornal.errors.count, "error") %> proibiu que esta noticia fosse salva:</h2>

      <ul>
        <% jornal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <div class="col-12 mb-3">
      <%= form.label :titulo, style: "display: block", class: "form-label" %>
      <%= form.text_field :titulo, class: "form-control" %>
    </div>

    <div class="col-12 mb-3">
      <%= form.label :materia, style: "display: block", class: "form-label" %>
      <%= form.file_field :materia, class: "form-control" %>
    </div>

    <div class="col-12">
      <%= form.submit class: 'btn btn-outline-success rounded-pill' %>
    </div>
  </div>
<% end %>
